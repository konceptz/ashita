<inputcommands>
        <cmd input="/DT">   <!------------ Set a keybind to /DT to toggle easily ----------->
            <if advanced="$DT=Off">
                <setvar name="DT" value="On" />
                <addtochat color="4">DT Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="DT" value="Off" />
                <addtochat color="4">DT Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>
        <cmd input="/kite">    <!-------------- Set a keybind to /kite to toggle easily ------------>
            <if advanced="$kite=Off">
                <setvar name="kite" value="On" />
                <addtochat color="4">Kite Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="kite" value="Off" />
                <addtochat color="4">Kite Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>
       
</inputcommands>
   
